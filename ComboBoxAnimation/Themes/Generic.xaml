                        </VisualStateManager.VisualStateGroups>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition x:Name="ToolsColumn" Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <RelativePanel Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="0" VerticalAlignment="Stretch">
                            <Border Name="Background" 
                                    Canvas.ZIndex="10"
                                    RelativePanel.AlignLeftWithPanel="True"
                                    RelativePanel.AlignBottomWithPanel="True"
                                    RelativePanel.AlignTopWithPanel="True"
                                    RelativePanel.AlignRightWithPanel="True"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    Background="{TemplateBinding Background}"/>
                            <ContentPresenter Name="ContentPresenter"  Margin="5 5" 
                                              HorizontalContentAlignment="Left"
                                              RelativePanel.AlignTopWithPanel="True"/>
                            <Rectangle Fill="Red" Width="0" Height="0" x:Name="Separator" RelativePanel.LeftOf="ContentPresenter" RelativePanel.AlignVerticalCenterWith="ContentPresenter"/>
                            <Rectangle Fill="Red" Width="0" Height="0" x:Name="Separator1" RelativePanel.RightOf="ContentPresenter" RelativePanel.LeftOf="DropDownGlyph" RelativePanel.AlignVerticalCenterWith="ContentPresenter"/>
                            <FontIcon Name="DropDownGlyph" Grid.Column="2"
                                  Grid.Row="0"
                                  FontFamily="Segoe MDL2 Assets" 
                                  Glyph="&#xE09D;"
                                  Margin="5"
                                          FontSize="12"
                                          VerticalAlignment="Center"
                                  RenderTransformOrigin="0.5,0.5"
                                      RelativePanel.AlignRightWithPanel="True"
                                      RelativePanel.LeftOf="ContentPresenter"                                      
                                      RelativePanel.AlignVerticalCenterWith="ContentPresenter">
                                <FontIcon.RenderTransform>
                                    <CompositeTransform Rotation="0"/>
                                </FontIcon.RenderTransform>
                            </FontIcon>

