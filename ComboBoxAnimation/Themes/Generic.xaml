                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition x:Name="ToolsColumn" Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Rectangle Fill="Green" Grid.Column="0"/>
                        <Rectangle Fill="Yellow" Grid.Column="1"/>
                        <Rectangle Fill="Purple" Grid.Column="2"/>
                        <RelativePanel Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="0" VerticalAlignment="Stretch">
                            <Border Name="Background"
                                    Canvas.ZIndex="10"                                    
                                    RelativePanel.AlignLeftWithPanel="True"
                                    RelativePanel.AlignBottomWithPanel="True"
                                    RelativePanel.AlignTopWithPanel="True"
                                    RelativePanel.AlignRightWithPanel="True"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    Background="Transparent"/>
                            <ContentPresenter Name="ContentPresenter"  Margin="5 5" 
                                              HorizontalContentAlignment="Left"
                                              RelativePanel.AlignTopWithPanel="True"/>
                            <!--<Rectangle Fill="Red" Width="10" Height="30" x:Name="Separator" RelativePanel.LeftOf="ContentPresenter" RelativePanel.AlignVerticalCenterWith="ContentPresenter"/>-->
